{
  "compilerOptions": {
    "module": "commonjs",
    "allowJs": true,
    "lib": ["ES6", "DOM"],
    "declaration": true,
    "removeComments": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2017",
    "sourceMap": true,
    "declarationMap": true,
    "outDir": "./dist",
    "declarationDir": "./dist/types",
    "baseUrl": "./src",
    "typeRoots": ["./types", "node_modules/@types"],
    "incremental": true,
    "paths": {
      "@*": ["*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
